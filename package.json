    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^6.2.1",
    "file-loader": "^5.0.2",
    "fs": "^0.0.1-security",
    "jest": "^25.1.0",
    "jest-mock-axios": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "vue-loader": "^15.8.3",
    "vue-template-compiler": "^2.6.10",
